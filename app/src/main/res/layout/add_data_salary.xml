<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.ibrahim.sqlitesoccer.addDataSalary">

    <EditText
        android:id="@+id/editText_pid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="PLAYER_ID"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editText_salary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="SALARY"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/button_addsalary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ADD SALARY TO SALARY TABLE" />
</LinearLayout>