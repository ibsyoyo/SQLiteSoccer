<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:scrollbarStyle="insideOverlay"
    android:visibility="visible">

    <RelativeLayout
        android:id="@+id/RelativeLayout01"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context="com.example.ibrahim.sqlitesoccer.teamAnalytics">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Welcome to Team Analytics!" />

            <TextView
                android:id="@+id/textViewQuery1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter a team for overall rating" />

            <EditText
                android:id="@+id/editTextQuery1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName" />

            <Button
                android:id="@+id/enter1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onEnter1"
                android:text="Enter" />

            <TextView
                android:id="@+id/textViewQuery2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter two teams to see how many times they played each other" />

            <EditText
                android:id="@+id/editTextQuery2Team1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Team 1"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/editTextQuery2Team2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Team 2"
                android:inputType="textPersonName" />

            <Button
                android:id="@+id/enter2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onEnter2"
                android:text="Enter" />

            <TextView
                android:id="@+id/textViewQuery3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter a team to find their record" />

            <EditText
                android:id="@+id/editTextQuery3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName" />

            <Button
                android:id="@+id/enter3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onEnter3"
                android:text="Enter" />

            <TextView
                android:id="@+id/textViewQuery4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="If you would like to find the record of the team above after a certain date enter the team above and the date below" />

            <CalendarView
                android:id="@+id/calendarView"
                android:layout_width="412dp"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <EditText
                android:id="@+id/editTextQuery3date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="date" />

            <Button
                android:id="@+id/enter4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onEnter4"
                android:text="Enter" />

            <TextView
                android:id="@+id/textViewQuery5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter a Team ID to see the salary of all the players" />

            <EditText
                android:id="@+id/editTextQuery4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName" />

            <Button
                android:id="@+id/enter5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onEnter5"
                android:text="Enter" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Press enter to see what team has the most amount of wins" />

            <Button
                android:id="@+id/enter6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onEnter6"
                android:text="Enter" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter a team to find their best defender" />

            <EditText
                android:id="@+id/editTextQuery6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName" />

            <Button
                android:id="@+id/enter7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onEnter7"
                android:text="Enter" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter a stadium to find teams that have never played their" />

            <EditText
                android:id="@+id/editTextQuery7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/editTextQuery5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName" />

            <Button
                android:id="@+id/enter8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onEnter8"
                android:text="Enter" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Press enter to find how many teams have more than 3 strikers" />

            <Button
                android:id="@+id/enter9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onEnter9"
                android:text="Enter" />

        </LinearLayout>
    </RelativeLayout>
</ScrollView>